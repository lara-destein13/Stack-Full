<script src="client-list.js"></script>

<h1>Client List Page</h1>

<div id="client-list">
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Postal Code</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each clients as | client |}}
                <tr>
                    <td>{{client.firstName}}</td>
                    <td>{{client.lastName}}</td>
                    <td>{{client.postalCode}}</td>
                    <td><button onclick="editButtonClicked({{@index}})">Edit</button></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    <button onclick="addButtonClicked({{@index}})">Add Client</button>
</div>

